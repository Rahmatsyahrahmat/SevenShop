<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    android:background="@drawable/background_item_profile">

    <ProgressBar
        android:id="@+id/pb_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:id="@+id/main_view_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@drawable/background_item_profile">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_foto"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_profile_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorBlack"
                android:text=""
                android:textSize="18sp"
                android:layout_margin="8dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_profile_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:background="@drawable/background_item_profile"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_profile_ganti_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ganti Password"
            android:background="@drawable/background_item_profile"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_profile_syarat_dan_ketentuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syarat dan Ketentuan"
            android:background="@drawable/background_item_profile"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/tv_profile_keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keluar"
            android:background="@drawable/background_item_profile"
            android:textColor="@color/colorBlack"
            android:padding="20dp"
            android:textSize="18sp"/>


    </LinearLayout>


</RelativeLayout>