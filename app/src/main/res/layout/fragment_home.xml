<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_slide_home"
        android:layout_height="160dp"
        android:layout_width="match_parent"
        android:background="#FFFFFF"/>

    <LinearLayout
        android:id="@+id/ll_slide_home"
        android:orientation="horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="120dp">
    </LinearLayout>

    <SearchView
        android:id="@+id/sv_home_home"
        android:layout_width="350dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginBottom="170dp"
        android:queryHint="Pencarian..."
        android:iconifiedByDefault="false"
        android:background="@drawable/background_search_view"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="230dp"
        android:text="Kategori" />

    <GridView
        android:id="@+id/gridview_home_home"
        android:layout_width="327dp"
        android:layout_height="86dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="290dp"
        android:background="@drawable/background_item_pic_produk"
        android:numColumns="3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="430dp"
        android:text="Produk Baru"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/produk_home_home"
        android:scrollbars="vertical"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="460dp">
    </android.support.v7.widget.RecyclerView>

</FrameLayout>