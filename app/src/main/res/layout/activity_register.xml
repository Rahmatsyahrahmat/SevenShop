<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/iv_register_foto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/sevenshops_logo"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Daftar"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="20dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alamat"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kecamatan"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kota"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provinsi"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_provinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon"/>
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_no_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:inputType="number"
            android:layout_marginBottom="10dp"/>
        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:background="@drawable/btn_green"
            android:textColor="@color/secondaryLightColor"/>
        <Button
            android:id="@+id/btn_register_masuk"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:background="@drawable/btn_white"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>


</ScrollView>