<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".activity.RegisterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_register_logo"
            android:layout_width="175dp"
            android:layout_height="188dp"
            android:layout_gravity="center"
            android:src="@drawable/sevenshops_logo" />

        <TextView
            android:id="@+id/iv_register_daftar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Daftar"
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"/>

        <ImageView
            android:id="@+id/iv_register_foto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher" />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:hint="Nama"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:background="@drawable/background_inputtext"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/background_inputtext"
            android:inputType="textPassword"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_con_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:hint="Alamat"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_kecamatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:hint="Kecamatan"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_kota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_inputtext"
            android:hint="Kota"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_provinsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provinsi"
            android:background="@drawable/background_inputtext"
            />
        <EditText
            android:padding="10dp"
            android:id="@+id/et_register_no_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nomor Telepon"
            android:background="@drawable/background_inputtext"
            android:inputType="number"
            />

        <Button
            android:id="@+id/btn_register_register"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:text="Sign Up" />
    </LinearLayout>


</ScrollView>